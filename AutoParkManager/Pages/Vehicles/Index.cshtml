@page
@model AutoParkManager.Pages.Vehicles.IndexModel
@{
}

<br />
<h2>List of Cars</h2>
<a class="btn btn-primary btn-sm" href="/Vehicles/Create">Adauga</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Marca</th>
            <th>Model</th>
            <th>Combustibil</th>
            <th>An Fabricatie</th>
            <th>Capacitate Cilindrica</th>
            <th>Culoare</th>
            <th>Serie Sasiu</th>
            <th>Adaugat la data de</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var veh in Model.carslist)
        {
            <tr>
                <td>@veh.id</td>
                <td>@veh.marca</td>
                <td>@veh.modelv</td>
                <td>@veh.combustibil</td>
                <td>@veh.an</td>
                <td>@veh.capacitate</td>
                <td>@veh.culoare</td>
                <td>@veh.VIN</td>
                <td>@veh.added_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Vehicles/Edit?id=@veh.id">Editare</a>
                    <a class="btn btn-danger btn-sm" href="/Vehicles/Delete?id=@veh.id">Stergere</a>
                    <a class="btn btn-warning btn-sm" href="/Vehicles/Sold?id=@veh.id">Marcheaza drept vandut</a>
                </td>
            </tr>
        }
    </tbody>
</table>